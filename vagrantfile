# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|
 configur.vm.provider "virtualbox" do |v|
  v.memory = 2048
  v.cpus = 2
 end
 
 confi.vm.define "puppetmaster" do |pm|
  pm.vm.box = "centos/7"
  pm.vm.network "primary_network", ip: "192.168.33.10"
  pm.vm.hostname = "puppetmaster"
 end 

 confi.vm.define "puppetclientcentos" do |pcc|
  pcc.vm.box = "centos/7"
  pcc.vm.network "primary_network", ip: "192.168.33.11"
  pcc.vm.hostname = "puppetclientcentoshn"
 end 
 
 confi.vm.define "puppetclientubuntu" do |pcu|
  pcu.vm.box = "ubuntu/xenial64"
  pcu.vm.network "primary_network", ip: "192.168.33.12"
  pcu.vm.hostname = "puppetclientubuntuhn"
 end 
end

